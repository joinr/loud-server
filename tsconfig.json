{
  "compilerOptions": {
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*", "quokka-scratch.ts"],
  "exclude": ["node_modules"]
}
